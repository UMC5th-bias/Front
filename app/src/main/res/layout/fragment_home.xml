<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/home_logo_iv"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/logo_big" />

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginTop="10dp"
                android:elevation="8dp">

                <TextView
                    android:id="@+id/home_logincheck_tv"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:gravity="center"
                    android:text="로그인이 필요한 서비스입니다."
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/home_login_btn"
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="50dp"
                    android:backgroundTint="@color/main"
                    android:text="로그인"
                    android:layout_gravity="center"
                    app:layout_constraintStart_toStartOf="@+id/button"/>
            </androidx.cardview.widget.CardView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constrainLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="@+id/login_check_tv">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent">


                    <ImageButton
                        android:id="@+id/home_recommend_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round"
                        android:src="@drawable/img1" />

                    <ImageView
                        android:id="@+id/home_blackbar_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/black_bar" />

                    <TextView
                        android:id="@+id/home_recommend_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:text="추천 랠리"
                        android:textColor="@color/white" />

                    <ImageButton
                        android:id="@+id/home_recommend_more_btn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignRight="@+id/home_recommend_btn"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="3dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_more" />
                </RelativeLayout>


                <ImageButton
                    android:id="@+id/home_new_item_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round"
                    android:src="@drawable/img2"
                    app:layout_constraintEnd_toEndOf="parent" />

                <ImageView
                    android:id="@+id/home_blackbar2_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/black_bar"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/home_new_item_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/home_new_item_btn"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="10dp"
                    android:text="신규 아이템"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="@+id/home_new_item_btn"
                    app:layout_constraintTop_toTopOf="@+id/home_new_item_btn" />

                <ImageButton
                    android:id="@+id/home_new_item_more_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignEnd="@+id/home_new_item_btn"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_more"
                    app:layout_constraintEnd_toEndOf="@+id/home_blackbar2_iv"
                    app:layout_constraintTop_toTopOf="@+id/home_new_item_btn" />

            </androidx.constraintlayout.widget.ConstraintLayout>



            <TextView
                android:id="@+id/home_real_time_post_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="실시간 인기글"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="40dp"/>
            <TextView
                android:id="@+id/home_real_time_post2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="소식을 알려드려요.🔥"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginTop="5dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/home_real_time_post_tv"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/home_banner_vp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round"
                    app:layout_constraintTop_toBottomOf="@id/linearLayout1"
                    android:layout_marginBottom="20dp"/>

            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>