<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="30dp">

    <LinearLayout
        android:id="@+id/item_rally_heart_verify_rally_ll"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/community_free_commend_border"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/item_rally_heart_verify_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="최애의 아이"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/item_rally_heart_verify_rally_total_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textColor="@color/white"
        android:textStyle="normal"
        app:layout_constraintTop_toTopOf="@id/item_rally_heart_verify_title_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:textColor="@color/white"
        android:textStyle="normal"
        app:layout_constraintTop_toTopOf="@id/item_rally_heart_verify_title_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="37dp"/>

    <TextView
        android:id="@+id/item_rally_heart_verify_rally_now_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/white"
        android:textStyle="normal"
        app:layout_constraintTop_toTopOf="@id/item_rally_heart_verify_title_tv"
        app:layout_constraintEnd_toStartOf="@id/item_rally_heart_verify_rally_total_tv"
        android:layout_marginEnd="5dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintStart_toStartOf="@id/item_rally_heart_verify_rally_ll"
        app:layout_constraintEnd_toEndOf="@id/item_rally_heart_verify_rally_ll"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_rally_heart_verify_rally_ll" >
        <ImageView
            android:id="@+id/item_rally_heart_verify_rally_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/animation_2"
            />
    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>