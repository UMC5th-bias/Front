<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- 상단 -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/find_pwd_back_ib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@null"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="비밀번호 찾기"
            android:textColor="#000000"
            android:textSize="23dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계정을 설정할 때 입력한 \n이메일 주소를 입력해주세요."
            android:textColor="#000000"
            android:lineSpacingExtra="5dp"
            android:textSize="23dp"
            android:textStyle="bold" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/find_id_phonenumber_et"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/edge"
                android:paddingStart="15dp"
                android:hint="이메일 주소를 입력해주세요."/>

            <TextView
                android:id="@+id/find_id_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/find_id_phonenumber_et"
                android:layout_alignEnd="@id/find_id_phonenumber_et"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:visibility="gone"
                android:gravity="center"
                android:text="00:00" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_error"
                android:layout_alignTop="@id/find_id_phonenumber_et"
                android:layout_alignEnd="@id/find_id_phonenumber_et"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:visibility="gone"
                android:gravity="center"/>
        </RelativeLayout>


        <!--초기에 안보이게 설정-->
        <TextView
            android:id="@+id/find_pwd_email_error_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="해당 이메일로 가입된 계정이 존재하지 않습니다."
            android:textColor="@color/main"
            android:visibility="gone"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/find_pwd_number_error_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="인증 번호가 틀렸습니다."
            android:textColor="@color/main"
            android:visibility="gone"
            android:textSize="12dp" />



        <EditText
            android:id="@+id/find_pwd_checknumber_et"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edge"
            android:paddingStart="15dp"
            android:visibility="gone"
            android:hint="인증번호를 입력해주세요." />


        <LinearLayout
            android:id="@+id/linearlayout_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_ellipse"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  입력하신 이메일 주소로 메일을 발송하였습니다."
                android:textColor="@color/dark_gray"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:visibility="gone"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_ellipse"/>
            <!--초기에 안보이게 설정-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  메일이 도착하기까지 시간이 소요될 수 있습니다."
                android:textColor="@color/dark_gray"
                android:textSize="12dp" />
        </LinearLayout>



        <!-- 클릭시 '확인'으로 변경은 kt에서-->
        <Button
            android:id="@+id/search_id_getnumber_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/edge"
            android:textSize="20dp"
            android:textStyle="bold"
            android:clickable="false"
            android:backgroundTint="#b5b5b5"
            android:text="인증 번호 받기"/>


        <LinearLayout
            android:id="@+id/linearlayout_text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_gray"
                android:text="인증 번호를 받지 못하셨나요?"/>


            <TextView
                android:id="@+id/find_pwd_resend_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textColor="@color/black"
                android:text="재전송"/>




        </LinearLayout>



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>