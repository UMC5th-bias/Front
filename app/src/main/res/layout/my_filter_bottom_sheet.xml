<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="@drawable/bottom_sheet_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_margin="15dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="필터"
        android:textStyle="bold"
        android:textSize="16sp"
        android:id="@+id/myFilter_bottom_sheet_filter_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="16dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myFilter_bottom_sheet_cancel_iv"
        android:src="@drawable/ic_cancel"
        android:layout_margin="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
"

    <RadioGroup
        android:id="@+id/myFilter_options_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/myFilter_bottom_sheet_filter_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:buttonTint="@color/pink"
            android:id="@+id/myFilter_modify_rb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="수정하기" />

        <RadioButton
            android:buttonTint="@color/pink"
            android:id="@+id/myFilter_delete_rb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="삭제하기" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>