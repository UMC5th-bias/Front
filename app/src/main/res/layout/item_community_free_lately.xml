<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/community_free_write_border"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/item_community_free_lately_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="코난 성지순례 가보신 분?"
        android:textSize="15sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/item_community_free_lately_writer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내 이름은 코난"
        android:textSize="10sp"
        android:textColor="@color/dark_gray"
        app:layout_constraintTop_toBottomOf="@id/item_community_free_lately_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"/>

    <ImageView
        android:id="@+id/item_community_free_lately_eye_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/community_free_eye"
        app:layout_constraintStart_toEndOf="@id/item_community_free_lately_writer_tv"
        app:layout_constraintTop_toTopOf="@id/item_community_free_lately_writer_tv"
        android:layout_marginStart="15dp"/>

    <TextView
        android:id="@+id/item_community_free_lately_eye_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="10sp"
        android:textColor="@color/dark_gray"
        app:layout_constraintTop_toTopOf="@id/item_community_free_lately_eye_iv"
        app:layout_constraintStart_toEndOf="@id/item_community_free_lately_eye_iv"
        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"/>

    <ImageView
        android:id="@+id/item_community_free_lately_like_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/community_free_like"
        app:layout_constraintStart_toEndOf="@id/item_community_free_lately_eye_tv"
        app:layout_constraintTop_toTopOf="@id/item_community_free_lately_eye_iv"
        android:layout_marginStart="15dp"/>

    <TextView
        android:id="@+id/item_community_free_lately_like_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="10sp"
        android:textColor="@color/main"
        app:layout_constraintTop_toTopOf="@id/item_community_free_lately_eye_iv"
        app:layout_constraintStart_toEndOf="@id/item_community_free_lately_like_iv"
        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"/>

    <ImageView
        android:id="@+id/item_community_free_lately_clock_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/community_free_clock"
        app:layout_constraintStart_toEndOf="@id/item_community_free_lately_like_tv"
        app:layout_constraintTop_toTopOf="@id/item_community_free_lately_like_iv"
        android:layout_marginStart="15dp"
        android:layout_marginTop="1dp"/>

    <TextView
        android:id="@+id/item_community_free_lately_clock_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13:10"
        android:textSize="10sp"
        android:textColor="@color/dark_gray"
        app:layout_constraintTop_toTopOf="@id/item_community_free_lately_eye_iv"
        app:layout_constraintStart_toEndOf="@id/item_community_free_lately_clock_iv"
        android:layout_marginTop="2dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_community_free_lately_comment_cl"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:background="@drawable/community_free_write_comment_border"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="7dp">

    <TextView
        android:id="@+id/item_community_free_lately_comment_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="14sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="3dp"/>

    <TextView
        android:id="@+id/item_community_free_lately_comment_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="댓글"
        android:textSize="12sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/item_community_free_lately_comment_num_tv"
        app:layout_constraintEnd_toEndOf="@id/item_community_free_lately_comment_num_tv"
        app:layout_constraintStart_toStartOf="@id/item_community_free_lately_comment_num_tv"
        android:layout_marginTop="2dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>