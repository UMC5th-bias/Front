<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/unline_fill_light_gray">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="15dp">


            <!-- 회원 프로필 -->
            <FrameLayout
                android:layout_width="70dp"
                android:layout_height="60dp">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/item_block_user_profile_civ"
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    app:civ_border_width="1dp"
                    app:civ_border_overlay="true"
                    android:src="@drawable/memberimg"
                    app:civ_border_color="@color/gray"/>


                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:elevation="3dp">

                    <ImageView
                        android:id="@+id/item_block_user_icon_civ"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        app:srcCompat="@drawable/ic_shop1" />

                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginStart="15dp">


                <ImageView
                    android:id="@+id/item_block_user_badge_iv"
                    android:layout_width="104dp"
                    android:layout_height="18dp"
                    android:gravity="start"
                    android:src="@drawable/ic_shoptitle"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_block_user_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="아이"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="20dp"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:layout_marginEnd="15dp">

            <View
                android:id="@+id/item_block_user_view"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_gravity="center|end"
                android:background="@drawable/edge_main"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="차단됨"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"/>


        </FrameLayout>

    </FrameLayout>
</LinearLayout>
