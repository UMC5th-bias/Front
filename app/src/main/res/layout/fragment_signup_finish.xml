<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/black"
    android:paddingTop="15dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="8.5dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_white_left_arrow"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19.75dp"
            android:text="회원가입"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="35dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:lineSpacingExtra="6sp"
            android:textColor="@color/white"
            android:text="최애의 장소\n가입을 축하드립니다! 🎉"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="67.17dp"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/signup_usercard_pink_background"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12.52dp"
                android:layout_marginStart="14.55dp"
                android:src="@drawable/signup_usercard_white_background"/>
            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="31.57dp"
                android:layout_marginStart="30dp">
                <ImageView
                    android:id="@+id/profile_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/signup_profile_background"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@id/profile_background"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/signup_default_profile_image"/>
            </RelativeLayout>
            <ImageView
                android:layout_width="42.90dp"
                android:layout_height="16.45dp"
                android:layout_marginTop="51.31dp"
                android:layout_marginStart="154.51dp"
                android:src="@drawable/signup_user_grade"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="78.21dp"
                android:layout_marginStart="154.15dp"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:text="아이 님"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="101.86dp"
                android:layout_marginStart="154.15dp"
                android:textSize="9sp"
                android:textColor="@color/black"
                android:text="한번 최애는 영원한 최애"/>

        </FrameLayout>


        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>


        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/signup_confirmbutton_background_pink"
            android:text="시작하기"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>