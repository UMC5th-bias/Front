<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <!-- 상단 -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/my_setting_back_ib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@null"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="프로필 카드 편집"
            android:textColor="#000000"
            android:textSize="23dp" />

        <TextView
            android:id="@+id/my_setting_save_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right"
            android:text="저장"
            android:textColor="#252525"
            android:textSize="20dp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">


        <!--내정보-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="15dp">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <!--내 정보 카드 배경-->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_home_bg"
                    android:scaleType="centerCrop"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">


                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center">

                        <!--프로필 사진-->
                        <View
                            android:layout_width="180dp"
                            android:layout_height="170dp"
                            android:background="@drawable/edge_fill_gray"/>

                        <LinearLayout
                            android:layout_width="180dp"
                            android:layout_height="170dp"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="150dp"
                                android:layout_height="140dp"
                                android:layout_gravity="center">


                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/my_profile_card_civ"
                                    android:layout_width="110dp"
                                    android:layout_height="110dp"
                                    app:civ_border_width="1dp"
                                    app:civ_border_overlay="true"
                                    android:layout_gravity="center"
                                    android:src="@drawable/memberimg"
                                    app:civ_border_color="@color/gray"/>



                                <!--아이콘 크기 통일 시 변경하기-->
                                <LinearLayout
                                    android:layout_width="110dp"
                                    android:layout_height="110dp"
                                    android:orientation="horizontal"
                                    android:elevation="3dp"
                                    android:layout_gravity="center">

                                    <ImageView
                                        android:id="@+id/my_icon_iv"
                                        android:layout_width="110dp"
                                        android:layout_height="110dp"
                                        app:srcCompat="@drawable/ic_shop2" />

                                </LinearLayout>

                            </FrameLayout>
                            <ImageView
                                android:id="@+id/my_profile_card_badge_iv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="3dp"
                                android:src="@drawable/ic_mybg"/>

                        </LinearLayout>



                    </FrameLayout>

                    <!--이름 / 설정iv-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="13dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/my_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="아이"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                    </LinearLayout>


                    <!--포인트-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="7dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="보유 포인트"
                            android:textColor="@color/black"
                            android:textSize="13dp"/>

                        <TextView
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/my_profile_card_point_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10000"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="13dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" P"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="13dp"/>
                    </LinearLayout>



                </LinearLayout>
            </FrameLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/bg_switch"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">


                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchOnOff"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:checked="true"
                    android:textColor="@color/white"
                    android:thumb="@drawable/thumb_selector"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    app:track="@drawable/track_selector" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/tvSwitchYes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="한정판매"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tvSwitchNo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="상시판매"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                </LinearLayout>


            </RelativeLayout>





        </LinearLayout>









    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>