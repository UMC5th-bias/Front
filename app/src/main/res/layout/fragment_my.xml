<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <TextView
        android:id="@+id/my_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="마이"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/my_tv">


        <!--내정보-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="15dp">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <!--내 정보 카드 배경-->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_home_bg"
                    android:scaleType="centerCrop"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">


                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center">

                        <!--프로필 사진-->
                        <View
                            android:layout_width="180dp"
                            android:layout_height="170dp"
                            android:background="@drawable/edge_fill_gray"/>

                        <LinearLayout
                            android:layout_width="180dp"
                            android:layout_height="170dp"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="150dp"
                                android:layout_height="135dp"
                                android:layout_gravity="center">


                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/my_profile_civ"
                                    android:layout_width="110dp"
                                    android:layout_height="110dp"
                                    app:civ_border_width="1dp"
                                    app:civ_border_overlay="true"
                                    android:layout_gravity="center"
                                    android:src="@drawable/signup_default_profile_image"
                                    app:civ_border_color="@color/gray"/>



                                <!--아이콘 크기 통일 시 변경하기-->
                                <LinearLayout
                                    android:layout_width="110dp"
                                    android:layout_height="110dp"
                                    android:orientation="horizontal"
                                    android:elevation="3dp"
                                    android:layout_gravity="center">

                                    <ImageView
                                        android:id="@+id/my_icon_iv"
                                        android:layout_width="110dp"
                                        android:layout_height="110dp"/>

                                </LinearLayout>

                            </FrameLayout>
                            <ImageView
                                android:id="@+id/my_badge_iv"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginTop="3dp"
                                android:layout_marginBottom="7dp"/>

                        </LinearLayout>



                    </FrameLayout>

                    <!--이름 / 설정iv-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="13dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/my_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="아이"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                        <ImageView
                            android:id="@+id/my_setting_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_set"/>
                    </LinearLayout>


                    <!--포인트-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="7dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="보유 포인트"
                            android:textColor="@color/black"
                            android:textSize="13dp"/>

                        <TextView
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/my_point_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10000"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="13dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" P"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="13dp"/>
                    </LinearLayout>



                </LinearLayout>
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="@drawable/edge_fill_gray"/>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">
                 
                    <!--완료한 성지순례-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="완료한 성지순례"
                            android:textColor="@color/black"
                            android:textSize="12dp"/>
                        <TextView
                            android:id="@+id/my_clean_rally_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/main"
                            android:textStyle="bold"
                            android:textSize="17dp"/>
                    </LinearLayout>


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/ic_line_h"/>

                    <!--방문한 장소-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="방문한 장소"
                            android:textColor="@color/black"
                            android:textSize="12dp"/>
                        <TextView
                            android:id="@+id/my_visit_place_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/main"
                            android:textStyle="bold"
                            android:textSize="17dp"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/ic_line_h"/>
                    <!--작성글-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="작성글"
                            android:textColor="@color/black"
                            android:textSize="12dp"/>
                        <TextView
                            android:id="@+id/my_guestbook_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="17dp"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/ic_line_h"/>
                    <!--댓글-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginEnd="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="댓글"
                            android:textColor="@color/black"
                            android:textSize="12dp"/>
                        <TextView
                            android:id="@+id/my_comment_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="17dp"/>
                    </LinearLayout>
                    
                </LinearLayout>
            </FrameLayout>


            <!--나의 성지순례-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="나의 성지순례"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:layout_marginBottom="30dp"/>

                <TextView
                    android:id="@+id/my_like_rally_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="찜해둔 성지순례"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:layout_marginBottom="30dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="인증한 성지순례"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:layout_marginBottom="30dp"/>
                <TextView
                    android:id="@+id/my_ask_rally_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="성지순례 장소 문의하기"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:layout_marginBottom="30dp"/>
            </LinearLayout>


            <!--나의 커뮤니티-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="나의 커뮤니티"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:layout_marginBottom="30dp"/>

                <!--cmm : 나의 커뮤니티 부분-->
                <TextView
                    android:id="@+id/my_cmm_guestbook_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="내가 작성한 글"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:layout_marginBottom="30dp"/>
                <TextView
                    android:id="@+id/my_cmm_comment_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="내가 작성한 댓글"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:layout_marginBottom="30dp"/>
                <TextView
                    android:id="@+id/my_cmm_block_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="차단한 사용자"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:layout_marginBottom="30dp"/>
            </LinearLayout>


            <!--기타-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="기타"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:layout_marginBottom="30dp"/>

                <TextView
                    android:id="@+id/my_cs_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="고객센터"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:layout_marginBottom="30dp"/>
                <TextView
                    android:id="@+id/my_notice_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="공지사항"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:layout_marginBottom="30dp"/>
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="약관 및 개인정보처리방침"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:layout_marginBottom="30dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="앱 버전"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:layout_marginBottom="30dp"/>
                <TextView
                    android:id="@+id/my_logout_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="로그아웃"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:layout_marginBottom="30dp"/>
                <TextView
                    android:id="@+id/my_cancel_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="탈퇴하기"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:layout_marginBottom="30dp"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>