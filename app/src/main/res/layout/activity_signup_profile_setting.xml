<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="15dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="8.5dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_black_left_arrow"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19.75dp"
            android:text="회원가입"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="35dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="63.29dp">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="16.46dp"
                    android:layout_height="16.46dp"
                    android:layout_gravity="center"
                    android:src="@drawable/signup_progress_pink"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="11.91sp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3.97dp">
                <ImageView
                    android:layout_width="16.46dp"
                    android:layout_height="16.46dp"
                    android:layout_gravity="center"
                    android:src="@drawable/signup_progress_pink"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="11.91sp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3.97dp">
                <ImageView
                    android:layout_width="16.46dp"
                    android:layout_height="16.46dp"
                    android:layout_gravity="center"
                    android:src="@drawable/signup_progress_pink"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="11.91sp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3.97dp">
                <ImageView
                    android:layout_width="16.46dp"
                    android:layout_height="16.46dp"
                    android:layout_gravity="center"
                    android:src="@drawable/signup_progress_pink"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textSize="11.91sp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>
            </FrameLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="31.47dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:lineSpacingExtra="6sp"
            android:textColor="@color/black"
            android:text="프로필을 설정해주세요."/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/profile_background"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/signup_profile_background"/>
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/signup_default_profile_image"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/profile_edit_cv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/profile_background"
                android:layout_alignEnd="@id/profile_background"
                app:cardElevation="2dp"
                app:cardCornerRadius="100dp"
                android:layout_marginBottom="2dp">
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/signup_profile_edit_btn"/>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="닉네임"
            android:textColor="@color/black"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:boxBackgroundMode="none"
                app:counterEnabled="true"
                app:counterMaxLength="10">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/name_tet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edge"
                    android:maxLength="10"
                    android:inputType="text"/>

            </com.google.android.material.textfield.TextInputLayout>
        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:text="한줄소개"
            android:textColor="@color/black"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:boxBackgroundMode="none"
                app:counterEnabled="true"
                app:counterMaxLength="50">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/introduction_tet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edge"
                    android:maxLength="50"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>
        </RelativeLayout>

        <Button
            android:id="@+id/next_btn"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/gray"
            android:text="다음 단계"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>