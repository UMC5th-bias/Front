<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/certificatedAnimation_cv"
            android:layout_width="110dp"
            android:layout_height="70dp"
            app:cardCornerRadius="10dp"
            app:cardPreventCornerOverlap="false"
            app:layout_constraintDimensionRatio="H,16:9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/certificatedAnimation_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/certificated_rally_img" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/certificatedRally_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13.5dp"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="날씨의 아이 덕후 투어 다녀왔어요:)"
            android:textColor="@color/black"
            android:textSize="11sp"
            app:layout_constraintStart_toEndOf="@id/certificatedAnimation_cv"
            app:layout_constraintTop_toTopOf="@id/certificatedAnimation_cv" />

        <TextView
            android:id="@+id/certificatedRally_tag1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4.77dp"
            android:text="#날씨의아이"
            android:textColor="@color/pink"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="@id/certificatedRally_title_tv"
            app:layout_constraintTop_toBottomOf="@id/certificatedRally_title_tv" />

        <TextView
            android:id="@+id/certificatedRally_tag2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="4.77dp"
            android:text="#도쿄"
            android:textColor="@color/pink"
            android:textSize="11sp"
            app:layout_constraintStart_toEndOf="@id/certificatedRally_tag1_tv"
            app:layout_constraintTop_toBottomOf="@id/certificatedRally_title_tv" />

        <TextView
            android:id="@+id/certificatedRally_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3.5dp"
            android:text="1시간 전"
            android:textColor="@color/dark_gray"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/certificatedRally_title_tv" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>