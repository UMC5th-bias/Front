<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_marginRight="15dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/interestedAnimation_cv"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:clickable="true"
            android:elevation="2dp"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="10dp"
            app:cardPreventCornerOverlap="false"
            app:layout_constraintDimensionRatio="H,16:9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/interestedAnimation_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/interested_rally_img" />

        </androidx.cardview.widget.CardView>

        <View
            android:layout_margin="5dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/heart"
            android:elevation="3dp"
            app:layout_constraintTop_toTopOf="@id/interestedAnimation_cv"
            app:layout_constraintEnd_toEndOf="@id/interestedAnimation_cv"/>


        <View
            android:id="@+id/interestedAnimation_vw"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:background="@drawable/rounded_overlay"
            android:elevation="3dp"
            app:layout_constraintBottom_toBottomOf="@id/interestedAnimation_cv"
            app:layout_constraintEnd_toEndOf="@id/interestedAnimation_cv"
            app:layout_constraintStart_toStartOf="@id/interestedAnimation_cv" />

        <TextView
            android:id="@+id/interestedAnimation_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:text="시간을 달리는 소녀"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/interestedAnimation_vw"
            app:layout_constraintStart_toStartOf="@id/interestedAnimation_vw"
            app:layout_constraintEnd_toEndOf="@id/interestedAnimation_vw"
            app:layout_constraintBottom_toBottomOf="@id/interestedAnimation_vw"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>