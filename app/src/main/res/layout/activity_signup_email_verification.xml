<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingTop="15dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_black_left_arrow"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19.75dp"
            android:text="회원가입"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="35dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="63.29dp">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="16.46dp"
                    android:layout_height="16.46dp"
                    android:layout_gravity="center"
                    android:src="@drawable/signup_progress_pink"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="11.91sp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3.97dp">
                <ImageView
                    android:layout_width="16.46dp"
                    android:layout_height="16.46dp"
                    android:layout_gravity="center"
                    android:src="@drawable/signup_progress_pink"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="11.91sp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3.97dp">
                <ImageView
                    android:layout_width="16.46dp"
                    android:layout_height="16.46dp"
                    android:layout_gravity="center"
                    android:src="@drawable/signup_progress_gray"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="11.91sp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3.97dp">
                <ImageView
                    android:layout_width="16.46dp"
                    android:layout_height="16.46dp"
                    android:layout_gravity="center"
                    android:src="@drawable/signup_progress_gray"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textSize="11.91sp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>
            </FrameLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="31.47dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:lineSpacingExtra="6sp"
            android:textColor="@color/black"
            android:text="인증코드를 입력해주세요."/>

        <EditText
            android:id="@+id/email_et"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="abcde@gmail.com"
            android:background="@drawable/signup_edittext_background"
            android:layout_marginTop="62.66dp"
            android:paddingVertical="15dp"
            android:paddingHorizontal="15dp"
            android:drawableEnd="@drawable/signup_checked_icon"
            android:textColor="@color/black"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">


            <EditText
                android:id="@+id/codenum_et"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="인증 코드를 입력해주세요."
                android:background="@drawable/signup_edittext_background"
                android:layout_marginTop="15dp"
                android:paddingVertical="15dp"
                android:paddingHorizontal="15dp"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/codenum_error_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/codenum_et"
                android:layout_alignEnd="@id/codenum_et"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:layout_alignParentEnd="true"
                android:visibility="gone"
                android:src="@drawable/ic_error" />

            <ImageView
                android:id="@+id/codenum_check_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/codenum_et"
                android:layout_alignEnd="@id/codenum_et"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="14dp"
                android:gravity="center"
                android:layout_alignParentEnd="true"
                android:visibility="gone"
                android:src="@drawable/signup_checked_icon" />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/codenum_error_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/main"
                        android:textSize="11sp"
                        android:text="인증 코드가 올바르지 않습니다."
                        android:visibility="gone"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/signup_dot_icon"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:layout_marginStart="7.25dp"
                        android:text="입력하신 이메일 주소로 메일을 전송하였습니다."/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:visibility="gone"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/signup_dot_icon"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="9sp"
                        android:layout_marginStart="7.25dp"
                        android:text="시간이 지나도 메일이 도착하지 않는다면 재전송 버튼을 눌러주세요."/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/next_tv"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="78.14dp"
                android:background="@drawable/signup_confirmbutton_background_darkgray"
                android:text="확인"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textStyle="bold"/>
        </FrameLayout>


    </LinearLayout>

</LinearLayout>