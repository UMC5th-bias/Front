<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="15dp"
    android:layout_marginStart="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:background="@drawable/shop_banner_new_icon_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/item_shop_banner_new_icon_profile_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shop_banner_new_icon_profile"
            android:layout_marginTop="25dp"
            android:layout_marginStart="7dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/item_shop_banner_new_icon_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/limited_icon_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="55dp"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:id="@+id/item_shop_banner_new_icon_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="유닝이"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="13sp"
            app:layout_constraintTop_toBottomOf="@id/item_shop_banner_new_icon_iv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"/>

        <TextView
            android:id="@+id/item_shop_banner_new_icon_cost_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20000P"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:textSize="11sp"
            app:layout_constraintTop_toBottomOf="@id/item_shop_banner_new_icon_title_tv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>