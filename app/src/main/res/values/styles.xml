<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 상점 메인 타이틀 스타일 -->
    <style name="ShopMainTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:autoSizeMaxTextSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 스위치 컨테이너 스타일 -->
    <style name="ShopMainSwitch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginHorizontal">15dp</item>
        <item name="android:layout_marginVertical">20dp</item>
        <item name="android:background">@drawable/bg_switch</item>
    </style>

    <!-- 스위치 본체 스타일 -->
    <style name="ShopMainSwitchCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:thumb">@drawable/thumb_selector</item>
        <item name="android:track">@drawable/track_selector</item>
    </style>

    <!-- 텍스트 스타일 (스위치용) -->
    <style name="SwitchText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 프레임 타이틀 스타일 -->
    <style name="FrameTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:background">@drawable/round50_pink_background</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>